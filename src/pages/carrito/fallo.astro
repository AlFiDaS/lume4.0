---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
---

<Layout>
  <div class="pagina-carrito">
    <Breadcrumb items={[
      { text: "Inicio", href: "/" },
      { text: "Carrito", href: "/carrito" },
      { text: "Pago Cancelado" }
    ]} />

    <section class="carrito">
      <div class="container">
        <div class="carrito-header" style="text-align: center;">
          <h1 style="color: #dc3545; font-size: 2.5rem; margin-bottom: 1rem;">âŒ Pago Cancelado</h1>
          <p style="font-size: 1.2rem; color: #666; margin-bottom: 2rem;">
            El pago no pudo ser procesado. No te preocupes, tu carrito sigue disponible.
          </p>
        </div>

        <div style="max-width: 600px; margin: 0 auto; background: #f8f9fa; padding: 2rem; border-radius: 8px;">
          <h2 style="margin-bottom: 1rem;">Â¿QuÃ© puedes hacer?</h2>
          <ul style="line-height: 2; color: #333;">
            <li>ğŸ”„ Intentar nuevamente el pago</li>
            <li>ğŸ’¬ Contactarnos por WhatsApp para coordinar otra forma de pago</li>
            <li>ğŸ“¦ Realizar el pedido por transferencia bancaria</li>
          </ul>

          <div style="margin-top: 2rem; text-align: center; display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="/carrito" class="btn btn-primary" style="display: inline-block; padding: 1rem 2rem; background: #007bff; color: white; text-decoration: none; border-radius: 4px; font-weight: bold;">
              Volver al carrito
            </a>
            <a href="/" class="btn btn-secondary" style="display: inline-block; padding: 1rem 2rem; background: #6c757d; color: white; text-decoration: none; border-radius: 4px; font-weight: bold;">
              Volver al inicio
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script is:inline>
    // Cancelar la orden cuando el usuario llega a esta pÃ¡gina
    // MercadoPago puede pasar preference_id en la URL, o podemos obtenerlo de sessionStorage
    (function() {
      const urlParams = new URLSearchParams(window.location.search);
      // Intentar obtener preference_id de la URL primero (MercadoPago lo pasa cuando redirige)
      let preferenceId = urlParams.get('preference_id');
      
      // Si no estÃ¡ en la URL, intentar obtenerlo de sessionStorage (lo guardamos antes de redirigir)
      if (!preferenceId) {
        preferenceId = sessionStorage.getItem('mp_preference_id');
      }

      // Si tenemos preference_id, cancelar la orden
      if (preferenceId) {
        fetch('/api/orders/cancel-order.php', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            preference_id: preferenceId
          })
        }).then(() => {
          // Limpiar sessionStorage despuÃ©s de cancelar
          sessionStorage.removeItem('mp_preference_id');
        }).catch(err => {
          // Silenciar errores, no es crÃ­tico si falla
          console.error('Error al cancelar orden:', err);
        });
      }
    })();
  </script>
</Layout>

