      <script is:inline>
        // Limpiar carrito despuÃ©s de pago exitoso
        if (typeof window.saveCarrito !== 'undefined') {
          window.saveCarrito([]);
          if (typeof window.updateCartCount !== 'undefined') {
            window.updateCartCount();
          }
        } else {
          // Si cart.js no estÃ¡ cargado, limpiar directamente
          localStorage.removeItem('carrito');
        }
        
        // Limpiar preference_id de sessionStorage (el pago fue exitoso)
        if (typeof sessionStorage !== 'undefined') {
          sessionStorage.removeItem('mp_preference_id');
        }

        // Si no hay order_id en la URL pero hay preference_id, intentar obtenerlo
        (function() {
          const urlParams = new URLSearchParams(window.location.search);
          let currentOrderId = urlParams.get('order_id');
          const preferenceId = urlParams.get('preference_id');
          
          // Si no hay order_id pero hay preference_id, intentar obtenerlo
          if (!currentOrderId && preferenceId) {
            fetch(`/api/orders/get-order-id.php?preference_id=${encodeURIComponent(preferenceId)}`)
              .then(res => res.json())
              .then(data => {
                if (data.success && data.order_id) {
                  // Mostrar el order_id en la pÃ¡gina
                  const orderInfoDiv = document.querySelector('[data-order-id-placeholder]');
                  if (orderInfoDiv && !orderInfoDiv.querySelector('.order-id-info')) {
                    orderInfoDiv.innerHTML = `
                      <div class="order-id-info" style="background: #e7f3ff; border: 1px solid #b3d9ff; border-radius: 8px; padding: 1rem; margin-bottom: 1.5rem;">
                        <h3 style="margin: 0 0 0.5rem 0; color: #0056b3; font-size: 1rem;">ğŸ“‹ InformaciÃ³n del Pedido</h3>
                        <p style="margin: 0; color: #333; font-size: 0.95rem;">
                          <strong>ID del Pedido: #${data.order_id}</strong>
                        </p>
                        <p style="margin: 0.5rem 0 0 0; color: #666; font-size: 0.85rem;">
                          Guarda este nÃºmero para consultas futuras por WhatsApp.
                        </p>
                      </div>
                    `;
                  }
                }
              })
              .catch(err => {
                console.error('Error al obtener order_id:', err);
              });
          }
        })();
  </script>
