---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = "Lume - Velas Artesanales Artesanales de Corrientes",
  description = "Descubr√≠ nuestras velas artesanales √∫nicas, souvenirs personalizados y velas arom√°ticas. Env√≠os a todo el pa√≠s desde Corrientes.",
  image = "/images/hero.webp",
  canonical = ""
} = Astro.props;

const canonicalURL = canonical ? new URL(canonical, Astro.site) : Astro.url;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    
    <!-- üéØ SEO OPTIMIZADO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- üîÑ FORZAR RECARGA DE CSS SI EST√Å DESACTUALIZADO -->
    <script is:inline>
      (function() {
        // Esperar a que el DOM est√© listo
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', checkCSSVersion);
        } else {
          checkCSSVersion();
        }
        
        function checkCSSVersion() {
          const cssLink = document.querySelector('link[href*="global.css"]');
          if (!cssLink) return;
          
          const currentVersion = cssLink.href.match(/v=([^&]+)/);
          if (!currentVersion) return;
          
          const storedVersion = localStorage.getItem('lume_css_version');
          const version = currentVersion[1];
          
          if (!storedVersion || storedVersion !== version) {
            // Nueva versi√≥n detectada, forzar recarga del CSS
            const newLink = document.createElement('link');
            newLink.rel = 'stylesheet';
            newLink.href = cssLink.href.split('?')[0] + '?v=' + version + '&_=' + Date.now();
            newLink.onload = function() {
              if (cssLink.parentNode) {
                cssLink.parentNode.removeChild(cssLink);
              }
              localStorage.setItem('lume_css_version', version);
            };
            document.head.appendChild(newLink);
          } else {
            localStorage.setItem('lume_css_version', version);
          }
        }
      })();
    </script>
    
    <!-- üñºÔ∏è OPEN GRAPH -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_AR" />
    
    <!-- üê¶ TWITTER CARD -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- üîó FAVICON Y MANIFEST -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/images/lume-logo.png" />
    <link rel="manifest" href="/manifest.json" />
    
    <!-- üöÄ PRELOADS CR√çTICOS -->
    <link rel="preload" href="/global.css?v=2.1.4-2026-01-03T14-11-34" as="style" />
    <link rel="preload" href="/js/cart.js?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49" as="script" />
    <link rel="preload" href="/images/hero.webp" as="image" />
    
    <!-- üé® FUENTES OPTIMIZADAS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- üì± META TAGS M√ìVILES -->
    <meta name="theme-color" content="#e0a4ce" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    
    <!-- üéØ STRUCTURED DATA -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Lume - Velas Artesanales",
      "description": description,
      "url": Astro.site,
      "logo": new URL("/images/lume-logo.png", Astro.site),
      "image": new URL(image, Astro.site),
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Pasaje Alvarez 873",
        "addressLocality": "Corrientes",
        "addressRegion": "Corrientes",
        "addressCountry": "AR"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -27.4698,
        "longitude": -58.8304
      },
      "telephone": "+5493795330156",
      "priceRange": "$$",
      "openingHours": "Mo-Fr 09:00-18:00, Sa 09:00-13:00"
    })} />
    
    <!-- üé® CSS CR√çTICO -->
    <link rel="stylesheet" href="/global.css?v=2.1.4-2026-01-03T14-11-34">
    
    <!-- üìä ANALYTICS (opcional) -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script> -->
  </head>
  <body>
    <!-- üîÑ DETECTAR CAMBIOS DE VERSI√ìN Y FORZAR RECARGA -->
    <script is:inline>
      const CURRENT_CSS_VERSION = '2.1.4-2026-01-03T14-11-34';
      const CURRENT_JS_VERSION = '2.1.4-2026-01-03T14-11-34';
      
      // Verificar versi√≥n de CSS
      const storedCssVersion = localStorage.getItem('css_version');
      if (storedCssVersion && storedCssVersion !== CURRENT_CSS_VERSION) {
        localStorage.setItem('css_version', CURRENT_CSS_VERSION);
        window.location.reload();
      } else if (!storedCssVersion) {
        localStorage.setItem('css_version', CURRENT_CSS_VERSION);
      }
      
      // Verificar versi√≥n de JS
      const storedJsVersion = localStorage.getItem('js_version');
      if (storedJsVersion && storedJsVersion !== CURRENT_JS_VERSION) {
        localStorage.setItem('js_version', CURRENT_JS_VERSION);
        window.location.reload();
      } else if (!storedJsVersion) {
        localStorage.setItem('js_version', CURRENT_JS_VERSION);
      }
    </script>
    
    <!-- üîù FORZAR SCROLL ARRIBA AL REFRESCAR -->
    <script is:inline>
      // Deshabilitar restauraci√≥n autom√°tica del scroll del navegador
      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }
      
      // Forzar scroll a arriba inmediatamente
      window.scrollTo(0, 0);
      
      // Funci√≥n para forzar scroll arriba
      function scrollToTop() {
        window.scrollTo({
          top: 0,
          left: 0,
          behavior: 'instant'
        });
        // Tambi√©n forzar el scroll del documento por si acaso
        if (document.documentElement) {
          document.documentElement.scrollTop = 0;
        }
        if (document.body) {
          document.body.scrollTop = 0;
        }
      }
      
      // Asegurarse de que se mantenga arriba durante la carga
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', scrollToTop);
      } else {
        scrollToTop();
      }
      
      // Y despu√©s de que todo cargue
      window.addEventListener('load', scrollToTop);
      
      // Tambi√©n forzar despu√©s de un peque√±o delay para asegurarse
      setTimeout(scrollToTop, 100);
      setTimeout(scrollToTop, 500);
    </script>
    
    <!-- üöÄ SKELETON LOADING -->
    <div id="skeleton-loader" style="display: none;">
      <div class="skeleton-navbar"></div>
      <div class="skeleton-content"></div>
    </div>
    
    <Navbar />

    <main>
      <slot />
    </main>

    <Footer />
    
    <!-- üîÑ SERVICE WORKER -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(registration => {
              console.log('‚úÖ SW registrado:', registration.scope);
              
              // Verificar actualizaciones cada 5 minutos (no tan frecuente)
              setInterval(() => {
                registration.update().catch(() => {});
              }, 5 * 60 * 1000);
            })
            .catch(error => {
              console.log('‚ùå SW fall√≥:', error);
            });
        });
      }
    </script>
    
    <!-- üì± PWA INSTALL PROMPT -->
    <script is:inline>
      let deferredPrompt;
      window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;
        // Mostrar bot√≥n de instalaci√≥n
      });
    </script>
    
    <!-- üõí SCRIPT DEL CARRITO -->
    <script src="/js/cart.js?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49" is:inline></script>
    
    <!-- ‚ù§Ô∏è SCRIPT DE WISHLIST -->
    <script src="/js/wishlist.js" is:inline></script>
    
    <!-- üîÑ SCRIPT DE ACTUALIZACI√ìN FORZADA - Inline para evitar cache de SW -->
    <script is:inline>
      // Inyectar directamente para evitar que SW lo cachee
      (function() {
        'use strict';
        const CURRENT_VERSION = '2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49';
        const VERSION_KEY = 'lume_cache_version';
        const storedVersion = localStorage.getItem(VERSION_KEY);
        
        if (!storedVersion || storedVersion !== CURRENT_VERSION) {
          console.log('üîÑ Versi√≥n cambiada, limpiando todo...');
          
          // Limpiar caches inmediatamente
          if ('caches' in window) {
            caches.keys().then(names => Promise.all(names.map(n => caches.delete(n))));
          }
          
          // Desregistrar SW inmediatamente
          if ('serviceWorker' in navigator) {
            navigator.serviceWorker.getRegistrations().then(regs => {
              return Promise.all(regs.map(r => r.unregister()));
            });
          }
          
          // Actualizar versi√≥n y recargar
          localStorage.setItem(VERSION_KEY, CURRENT_VERSION);
          setTimeout(() => {
            window.location.href = window.location.href.split('?')[0] + '?nocache=' + Date.now();
          }, 100);
        }
      })();
    </script>
    <script src="/js/force-update.js?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49" is:inline></script>
    
    <!-- üì¶ SCRIPT DE CARGA DIN√ÅMICA DE PRODUCTOS -->
    <script src="/js/products-loader.js" is:inline></script>
    
    <!-- üì¶ SCRIPT DE DETALLE DE PRODUCTO -->
    <script src="/js/product-detail.js?v=2.1.4-2026-01-03T14-11-34" is:inline></script>
    
    <!-- üñºÔ∏è SCRIPT DE CARGA DIN√ÅMICA DE GALER√çA -->
    <script src="/js/galeria-loader.js" is:inline></script>
  </body>
</html>

