---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = "Lume - Velas Artesanales Artesanales de Corrientes",
  description = "Descubr√≠ nuestras velas artesanales √∫nicas, souvenirs personalizados y velas arom√°ticas. Env√≠os a todo el pa√≠s desde Corrientes.",
  image = "/images/hero.webp",
  canonical = ""
} = Astro.props;

const canonicalURL = canonical ? new URL(canonical, Astro.site) : Astro.url;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- üéØ SEO OPTIMIZADO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- üñºÔ∏è OPEN GRAPH -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_AR" />
    
    <!-- üê¶ TWITTER CARD -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- üîó FAVICON Y MANIFEST -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/images/lume-logo.png" />
    <link rel="manifest" href="/manifest.json" />
    
    <!-- üöÄ PRELOADS CR√çTICOS -->
    <link rel="preload" href="/global.css?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49" as="style" />
    <link rel="preload" href="/js/cart.js?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49" as="script" />
    <link rel="preload" href="/images/hero.webp" as="image" />
    
    <!-- üé® FUENTES OPTIMIZADAS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- üì± META TAGS M√ìVILES -->
    <meta name="theme-color" content="#e0a4ce" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    
    <!-- üéØ STRUCTURED DATA -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Lume - Velas Artesanales",
      "description": description,
      "url": Astro.site,
      "logo": new URL("/images/lume-logo.png", Astro.site),
      "image": new URL(image, Astro.site),
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Pasaje Alvarez 873",
        "addressLocality": "Corrientes",
        "addressRegion": "Corrientes",
        "addressCountry": "AR"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -27.4698,
        "longitude": -58.8304
      },
      "telephone": "+5493795330156",
      "priceRange": "$$",
      "openingHours": "Mo-Fr 09:00-18:00, Sa 09:00-13:00"
    })} />
    
    <!-- üé® CSS CR√çTICO -->
    <link rel="stylesheet" href="/global.css?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49">
    
    <!-- üìä ANALYTICS (opcional) -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script> -->
  </head>
  <body>
    <!-- üöÄ SKELETON LOADING -->
    <div id="skeleton-loader" style="display: none;">
      <div class="skeleton-navbar"></div>
      <div class="skeleton-content"></div>
    </div>
    
    <Navbar />

    <main>
      <slot />
    </main>

    <Footer />
    
    <!-- üîÑ SERVICE WORKER -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(registration => {
              console.log('‚úÖ SW registrado:', registration.scope);
            })
            .catch(error => {
              console.log('‚ùå SW fall√≥:', error);
            });
        });
      }
    </script>
    
    <!-- üì± PWA INSTALL PROMPT -->
    <script is:inline>
      let deferredPrompt;
      window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;
        // Mostrar bot√≥n de instalaci√≥n
      });
    </script>
    
    <!-- üõí SCRIPT DEL CARRITO -->
    <script src="/js/cart.js?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49" is:inline></script>
    
    <!-- üîÑ SCRIPT DE ACTUALIZACI√ìN FORZADA -->
    <script src="/js/force-update.js?v=2.1.0-2025-09-03T22-17-43-2025-09-03T22-16-50-2025-09-03T22-13-49" is:inline></script>
    
    <!-- üì¶ SCRIPT DE CARGA DIN√ÅMICA DE PRODUCTOS -->
    <script src="/js/products-loader.js" is:inline></script>
    
    <!-- üì¶ SCRIPT DE DETALLE DE PRODUCTO -->
    <script src="/js/product-detail.js" is:inline></script>
    
    <!-- üñºÔ∏è SCRIPT DE CARGA DIN√ÅMICA DE GALER√çA -->
    <script src="/js/galeria-loader.js" is:inline></script>
  </body>
</html>

